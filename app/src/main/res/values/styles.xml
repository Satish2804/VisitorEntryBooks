<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/primary_text</item>
        <item name="colorControlActivated">@color/secondary_text</item>
        <item name="colorControlHighlight">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>


        <item name="colorButtonNormal">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EdittextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="android:layout_marginRight">10dp</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/accent</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/secondary_text</item>
    </style>

    <style name="card_view_corner_radius" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="check_in_title_layout_margin_top">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="red_view_line_width_height">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="title_text_view_margin_left_and_text_size">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="check_in_common_fields_margin_top">
