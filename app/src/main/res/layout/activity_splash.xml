<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.visitorentrybook.activities.splash.SplashActivity">

    <android.support.v7.widget.CardView
       style="@style/splash_card_view_height_width_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="@color/icons"
        app:layout_constraintTop_toTopOf="parent" >
        <com.visitorentrybook.widgets.VbTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            style="@style/splash_app_name"
            android:text="@string/str_visitor_book"
            android:textColor="@color/primary_text"
            app:setFont="OpenSansCondensedBold"
            />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
