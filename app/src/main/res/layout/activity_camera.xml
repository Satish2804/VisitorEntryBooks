<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/accent"
    tools:context="com.visitorentrybook.activities.camera.CameraActivity">
<ImageView
    android:id="@+id/camera"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/camera"/>

  <com.visitorentrybook.widgets.VbTextView
      android:layout_width="wrap_content"
      setFont=""
      android:layout_marginTop="10dp"
      android:layout_centerInParent="true" android:layout_height="wrap_content"
      android:layout_below="@+id/camera"
      android:textSize="20sp"
      android:textColor="@color/icons"
      android:text="Add your pic to continue process"/>
</RelativeLayout>
